<?xml version="1.0" encoding="UTF-8"?>
<latchai_specification>
  <metadata>
    <app_name>Latchai</app_name>
    <version>1.0</version>
    <platform>Windows Desktop Application</platform>
    <tagline>Your AI-Powered Dating Conversation Assistant</tagline>
    <description>
      Latchai is an intelligent dating assistant specifically designed for Hinge users. 
      It analyzes your personality, your matches' profiles, and ongoing conversations to provide 
      contextually relevant suggestions, conversation starters, and relationship-building strategies.
    </description>
  </metadata>

  <!-- ==================== CORE FEATURES ==================== -->
  <core_features>
    <feature id="user_profile">
      <name>Personal Profile System</name>
      <description>Comprehensive user profile creation for personalized AI assistance</description>
      <components>
        <component>
          <name>Hinge Profile Import</name>
          <details>Import all Hinge prompts, photos, and profile information</details>
          <data_collected>
            <item>Profile prompts (answers to Hinge questions)</item>
            <item>Photo descriptions (optional: AI visual analysis for context)</item>
            <item>Basic demographics (age, location, occupation)</item>
            <item>Dating preferences and goals</item>
          </data_collected>
        </component>
        
        <component>
          <name>Personality Assessment</name>
          <details>Multi-dimensional personality test for communication style matching</details>
          <assessment_areas>
            <area category="interests">
              <subcategories>
                <item>Hobbies and activities</item>
                <item>Entertainment preferences (movies, music, books)</item>
                <item>Sports and fitness</item>
                <item>Food and dining preferences</item>
                <item>Travel and adventure</item>
                <item>Arts and culture</item>
              </subcategories>
            </area>
            
            <area category="communication_style">
              <subcategories>
                <item>Humor type (witty, playful, dry, silly)</item>
                <item>Conversation pace (fast/slow, detailed/concise)</item>
                <item>Emoji usage preference</item>
                <item>Flirtation comfort level</item>
                <item>Depth preference (deep/light conversations)</item>
              </subcategories>
            </area>
            
            <area category="values">
              <subcategories>
                <item>Relationship goals (casual, serious, unsure)</item>
                <item>Life priorities (career, family, adventure, stability)</item>
                <item>Social preferences (extroverted/introverted)</item>
                <item>Dealbreakers and must-haves</item>
              </subcategories>
            </area>
            
            <area category="dating_approach">
              <subcategories>
                <item>Initiative level (proactive/reactive)</item>
                <item>Conversation topics comfort zones</item>
                <item>Meeting timeline preferences</item>
                <item>Boundaries and comfort zones</item>
              </subcategories>
            </area>
          </assessment_areas>
        </component>
        
        <component>
          <name>Conversation History Bank</name>
          <details>Optional: Import past successful/unsuccessful conversation patterns for AI learning</details>
        </component>
      </components>
    </feature>

    <feature id="match_management">
      <name>Match Profile System</name>
      <description>Individual profiles for each match with dedicated AI assistance</description>
      <structure>
        <match_dashboard>
          <layout>Grid or list view of all active matches</layout>
          <display_info>
            <item>Match name and photo</item>
            <item>Conversation status (active, stalled, needs response)</item>
            <item>Last message timestamp</item>
            <item>Compatibility score (AI-generated)</item>
            <item>Conversation health indicator</item>
            <item>Quick action buttons (view chat, get suggestion, archive)</item>
          </display_info>
        </match_dashboard>
        
        <individual_match_profile>
          <profile_import>
            <method>Manual input or screenshot analysis</method>
            <data_captured>
              <item>All Hinge prompts and answers</item>
              <item>Photo analysis (interests, lifestyle indicators)</item>
              <item>Profile basics (age, location, occupation)</item>
              <item>Visible interests and preferences</item>
            </data_captured>
          </profile_import>
          
          <ai_analysis>
            <compatibility_assessment>
              <factor>Shared interests percentage</factor>
              <factor>Communication style compatibility</factor>
              <factor>Value alignment score</factor>
              <factor>Conversation potential rating</factor>
            </compatibility_assessment>
            
            <conversation_insights>
              <insight>Suggested conversation topics based on their prompts</insight>
              <insight>Potential connection points between profiles</insight>
              <insight>Red flags or compatibility concerns</insight>
              <insight>Unique aspects of their personality to explore</insight>
            </conversation_insights>
          </ai_analysis>
          
          <notes_section>
            <purpose>User can add personal observations and reminders</purpose>
            <examples>
              <item>They mentioned loving hiking - ask about favorite trails</item>
              <item>Sister's wedding next month</item>
              <item>Prefers late evening messages</item>
            </examples>
          </notes_section>
        </individual_match_profile>
      </structure>
    </feature>

    <feature id="ai_assistant">
      <name>Dual-Mode AI Chat Assistant</name>
      <description>Context-aware AI assistant with simulation and planning modes</description>
      
      <mode name="simulation_mode">
        <purpose>Track and analyze ongoing conversation dynamics</purpose>
        <functionality>
          <conversation_mirror>
            <description>User manually updates conversation transcript</description>
            <update_methods>
              <method>Copy-paste message exchanges</method>
              <method>Voice dictation for quick updates</method>
              <method>Screenshot import with OCR</method>
            </update_methods>
            <display>
              <format>Chat bubble interface mirroring Hinge design</format>
              <color_coding>User messages vs match messages</color_coding>
              <timestamps>Track conversation pacing</timestamps>
            </display>
          </conversation_mirror>
          
          <real_time_analysis>
            <sentiment_tracking>
              <metric>Overall conversation mood (positive, neutral, negative)</metric>
              <metric>Engagement level (enthusiastic, interested, polite, disengaged)</metric>
              <metric>Flirtation intensity</metric>
              <metric>Response time patterns</metric>
            </sentiment_tracking>
            
            <conversation_health_indicators>
              <indicator type="green">
                <name>Strong Connection</name>
                <signals>
                  <item>Both parties asking questions</item>
                  <item>Messages increasing in length</item>
                  <item>Quick response times</item>
                  <item>Shared humor and banter</item>
                  <item>Future plans being discussed</item>
                </signals>
              </indicator>
              
              <indicator type="yellow">
                <name>Needs Attention</name>
                <signals>
                  <item>Decreasing message length</item>
                  <item>Slower response times</item>
                  <item>Topic exhaustion signs</item>
                  <item>One-sided question asking</item>
                  <item>Generic responses increasing</item>
                </signals>
              </indicator>
              
              <indicator type="red">
                <name>At Risk</name>
                <signals>
                  <item>Consistent short responses</item>
                  <item>No questions being asked</item>
                  <item>Long gaps between responses</item>
                  <item>Conversation feels forced</item>
                  <item>Lack of engagement with topics</item>
                </signals>
              </indicator>
            </conversation_health_indicators>
            
            <pattern_recognition>
              <pattern>Topics that generate most engagement</pattern>
              <pattern>Optimal message timing for this match</pattern>
              <pattern>Communication style compatibility</pattern>
              <pattern>Escalation readiness (when to suggest meeting)</pattern>
            </pattern_recognition>
          </real_time_analysis>
          
          <visual_analytics>
            <chart type="timeline">Message frequency over time</chart>
            <chart type="word_cloud">Most discussed topics</chart>
            <chart type="graph">Engagement trend line</chart>
            <chart type="meter">Compatibility dynamics</chart>
          </visual_analytics>
        </functionality>
      </mode>
      
      <mode name="planning_mode">
        <purpose>Generate conversation strategies and message suggestions</purpose>
        <functionality>
          <suggestion_engine>
            <conversation_starters>
              <scenario>First message ideas</scenario>
              <approach>Personalized based on their specific prompts</approach>
              <options>
                <option type="humorous">Witty observations about their profile</option>
                <option type="thoughtful">Genuine questions about their interests</option>
                <option type="playful">Light teasing or banter openings</option>
                <option type="straightforward">Direct compliments or connections</option>
              </options>
              <rating>AI rates each suggestion's potential effectiveness</rating>
            </conversation_starters>
            
            <response_suggestions>
              <context_aware>Based on their last message and conversation history</context_aware>
              <variety>
                <suggestion type="continue_topic">Deepen current conversation thread</suggestion>
                <suggestion type="pivot">Smoothly transition to new topic</suggestion>
                <suggestion type="callback">Reference earlier conversation point</suggestion>
                <suggestion type="escalate">Move toward suggesting a date</suggestion>
                <suggestion type="playful">Add humor or flirtation</suggestion>
              </variety>
              <customization>User can regenerate with different tones/approaches</customization>
            </response_suggestions>
            
            <conversation_rescues>
              <situation>When conversation is stalling</situation>
              <strategies>
                <strategy>Introduce unexpected question</strategy>
                <strategy>Share vulnerable or interesting story</strategy>
                <strategy>Suggest fun activity or game (e.g., "This or That")</strategy>
                <strategy>Call back to earlier interesting topic</strategy>
                <strategy>Strategic pause with re-engagement plan</strategy>
              </strategies>
            </conversation_rescues>
            
            <date_transition_assistant>
              <readiness_indicator>AI assesses when it's appropriate to suggest meeting</readiness_indicator>
              <suggestion_templates>
                <template>Casual coffee meetup</template>
                <template>Activity-based date (hiking, museum, etc.)</template>
                <template>Video call first</template>
                <template>Group setting options</template>
              </suggestion_templates>
              <timing_advice>Best moment in conversation to make the ask</timing_advice>
            </date_transition_assistant>
          </suggestion_engine>
          
          <strategic_coaching>
            <conversation_goals>
              <goal>Build rapport and connection</goal>
              <goal>Discover compatibility indicators</goal>
              <goal>Create memorable interactions</goal>
              <goal>Progress toward meeting in person</goal>
            </conversation_goals>
            
            <tactical_advice>
              <advice category="pacing">Don't respond too quickly or too slowly - optimal timing suggestions</advice>
              <advice category="depth">Balance light and meaningful conversations</advice>
              <advice category="interest">Show genuine curiosity without interrogating</advice>
              <advice category="vulnerability">Share appropriately to build trust</advice>
              <advice category="escalation">Gradual progression toward date invitation</advice>
            </tactical_advice>
            
            <warning_system>
              <warning type="red_flag">AI identifies potential incompatibilities or concerning signals</warning>
              <warning type="caution">Suggests avoiding certain topics or approaches</warning>
              <warning type="opportunity">Highlights moments to make strong impression</warning>
            </warning_system>
          </strategic_coaching>
          
          <conversation_playbook>
            <templates category="icebreakers">Categorized by personality type and interests</templates>
            <templates category="deep_questions">Build emotional connection</templates>
            <templates category="humor">Match's style-appropriate jokes and banter</templates>
            <templates category="flirtation">Escalate romantic interest appropriately</templates>
            <templates category="recovery">Handle awkward moments or miscommunications</templates>
          </conversation_playbook>
        </functionality>
      </mode>
      
      <ai_personality_customization>
        <tone_settings>
          <option>Conservative (safe, respectful suggestions)</option>
          <option>Balanced (mix of safe and bold)</option>
          <option>Confident (more direct and flirtatious)</option>
          <option>Custom (user-defined parameters)</option>
        </tone_settings>
        
        <learning_system>
          <feedback_loop>User rates suggestion effectiveness</feedback_loop>
          <adaptation>AI learns user's preferred style over time</adaptation>
          <success_tracking>Correlates suggestions with positive outcomes</success_tracking>
        </learning_system>
      </ai_personality_customization>
    </feature>

    <feature id="additional_tools">
      <name>Supporting Features</name>
      
      <tool name="photo_response_helper">
        <purpose>Suggest responses when match sends photos</purpose>
        <analysis>AI analyzes photo context and suggests relevant, engaging responses</analysis>
      </tool>
      
      <tool name="voice_note_assistant">
        <purpose>Help craft voice note messages</purpose>
        <features>
          <item>Suggest talking points</item>
          <item>Optimal length recommendations</item>
          <item>Tone and energy guidance</item>
        </features>
      </tool>
      
      <tool name="profile_optimization">
        <purpose>Improve user's own Hinge profile</purpose>
        <analysis>
          <item>Prompt effectiveness scoring</item>
          <item>Photo selection advice</item>
          <item>Comparison with successful profiles</item>
          <item>A/B testing suggestions</item>
        </analysis>
      </tool>
      
      <tool name="match_comparison">
        <purpose>Compare multiple matches to prioritize effort</purpose>
        <metrics>
          <metric>Compatibility scores</metric>
          <metric>Conversation quality</metric>
          <metric>Meeting potential</metric>
          <metric>Effort investment vs. return</metric>
        </metrics>
      </tool>
      
      <tool name="conversation_library">
        <purpose>Save and categorize successful conversation elements</purpose>
        <categories>
          <category>Opening lines that worked</category>
          <category>Great questions that sparked connection</category>
          <category>Funny moments</category>
          <category>Smooth topic transitions</category>
          <category>Successful date suggestions</category>
        </categories>
        <usage>Reference for future conversations</usage>
      </tool>
      
      <tool name="date_planning_assistant">
        <purpose>Once date is scheduled, help plan the perfect date</purpose>
        <features>
          <item>Location suggestions based on shared interests</item>
          <item>Conversation topic preparation</item>
          <item>What to wear advice</item>
          <item>First date do's and don'ts</item>
        </features>
      </tool>
    </feature>
  </core_features>

  <!-- ==================== USER INTERFACE STRUCTURE ==================== -->
  <user_interface>
    <main_navigation>
      <nav_item id="dashboard">
        <name>Dashboard</name>
        <description>Overview of all matches and activity</description>
        <sections>
          <section>Active matches grid/list</section>
          <section>Quick stats (total matches, response rate, success metrics)</section>
          <section>Recent activity feed</section>
          <section>AI insights and recommendations</section>
        </sections>
      </nav_item>
      
      <nav_item id="my_profile">
        <name>My Profile</name>
        <description>User's personal profile and settings</description>
        <sections>
          <section>Hinge profile information</section>
          <section>Personality assessment results</section>
          <section>Communication preferences</section>
          <section>Edit and update information</section>
        </sections>
      </nav_item>
      
      <nav_item id="matches">
        <name>Matches</name>
        <description>Individual match profiles and conversations</description>
        <interaction>Click match to open detailed view</interaction>
      </nav_item>
      
      <nav_item id="library">
        <name>Library</name>
        <description>Saved conversations, templates, and successful strategies</description>
      </nav_item>
      
      <nav_item id="analytics">
        <name>Analytics</name>
        <description>Overall performance metrics and insights</description>
        <metrics>
          <metric>Match to conversation rate</metric>
          <metric>Conversation to date rate</metric>
          <metric>Average conversation duration</metric>
          <metric>Most successful opening lines</metric>
          <metric>Peak response times</metric>
        </metrics>
      </nav_item>
      
      <nav_item id="settings">
        <name>Settings</name>
        <description>App preferences and AI customization</description>
      </nav_item>
    </main_navigation>
    
    <match_detail_view>
      <layout>Two-mode toggle design for each match (e.g., Jenna)</layout>
      
      <mode_toggle>
        <button name="history_mode">
          <label>History (Sim)</label>
          <description>View exact conversation replica from Hinge</description>
          <icon>Chat bubbles / Message history</icon>
        </button>
        <button name="plan_mode">
          <label>Plan Mode</label>
          <description>AI assistant chat for strategy and suggestions</description>
          <icon>Brain / Lightbulb</icon>
        </button>
      </mode_toggle>
      
      <history_mode name="conversation_simulation">
        <purpose>Exact replica of Hinge chat serving as reference for AI</purpose>
        <display>
          <format>Chat bubble interface mirroring Hinge design</format>
          <color_coding>User messages vs match messages</color_coding>
          <timestamps>Track conversation pacing</timestamps>
          <layout>Clean chat view with conversation history</layout>
        </display>
        <controls>
          <control>Add new messages (manual input)</control>
          <control>Edit existing messages</control>
          <control>Delete messages</control>
          <control>Import from screenshot (OCR)</control>
          <control>Bulk paste conversation</control>
        </controls>
        <features>
          <feature>Scroll through entire conversation history</feature>
          <feature>Search within conversation</feature>
          <feature>Jump to specific dates</feature>
          <feature>View message metadata (time, read status)</feature>
        </features>
        <ai_access>AI can read and analyze this history for context in Plan Mode</ai_access>
      </history_mode>
      
      <plan_mode name="ai_assistant_chat">
        <purpose>Interactive AI chat for strategy, suggestions, and coaching</purpose>
        <display>
          <format>Chat interface with AI assistant</format>
          <ai_persona>Dating coach personality</ai_persona>
          <context_awareness>References History mode conversation automatically</context_awareness>
        </display>
        <user_interactions>
          <interaction>Ask for message suggestions</interaction>
          <interaction>Request conversation analysis</interaction>
          <interaction>Get opening line ideas</interaction>
          <interaction>Ask about timing ("When should I reply?")</interaction>
          <interaction>Request date suggestion help</interaction>
          <interaction>Ask if conversation is going well</interaction>
        </user_interactions>
        <ai_capabilities>
          <capability>Generate contextual message suggestions based on History</capability>
          <capability>Analyze conversation health and momentum</capability>
          <capability>Provide strategic advice for next steps</capability>
          <capability>Suggest conversation topics based on match profile</capability>
          <capability>Warn about potential red flags or mistakes</capability>
          <capability>Recommend optimal reply timing</capability>
          <capability>Help transition to asking for date</capability>
        </ai_capabilities>
        <features>
          <feature>Copy AI suggestions to clipboard</feature>
          <feature>Regenerate with different tone</feature>
          <feature>Save good suggestions to library</feature>
          <feature>Rate AI responses for learning</feature>
          <feature>Quick action buttons (e.g., "Suggest opening line", "Analyze conversation")</feature>
        </features>
        <match_context_panel>
          <section>Match profile summary (collapsible)</section>
          <section>Key talking points from their profile</section>
          <section>Conversation health indicator</section>
          <section>Your notes about this match</section>
        </match_context_panel>
      </plan_mode>
      
      <data_flow>
        <description>History Mode feeds conversation data to AI in Plan Mode</description>
        <example>
          User adds messages in History → AI reads context → User switches to Plan Mode 
          → AI provides suggestions based on actual conversation history
        </example>
      </data_flow>
    </match_detail_view>
    
    <design_principles>
      <principle>Clean, modern interface inspired by dating apps</principle>
      <principle>Dark and light mode options</principle>
      <principle>Intuitive navigation with minimal learning curve</principle>
      <principle>Privacy-focused design (no data shown in window previews)</principle>
      <principle>Quick access shortcuts for power users</principle>
    </design_principles>
  </user_interface>

  <!-- ==================== TECHNICAL ARCHITECTURE ==================== -->
  <technical_architecture>
    <platform>
      <target>Windows 10/11</target>
      <framework_options>
        <option>Electron (cross-platform compatibility)</option>
        <option>.NET MAUI (native Windows performance)</option>
        <option>Flutter (beautiful UI capabilities)</option>
      </framework_options>
      <recommended>Electron for rapid development and modern web technologies</recommended>
    </platform>
    
    <ai_integration>
      <model_options>
        <option>OpenAI GPT-4 API (advanced language understanding)</option>
        <option>Anthropic Claude API (nuanced conversation analysis)</option>
        <option>Custom fine-tuned model (specialized for dating conversations)</option>
        <option>Hybrid approach (combine multiple models)</option>
      </model_options>
      
      <prompt_engineering>
        <system_prompt_structure>
          <component>User personality profile</component>
          <component>Match personality profile</component>
          <component>Conversation history</component>
          <component>Current conversation context</component>
          <component>Specific task (suggestion, analysis, strategy)</component>
        </system_prompt_structure>
      </prompt_engineering>
      
      <context_management>
        <strategy>Vector database for conversation history</strategy>
        <strategy>Relevance scoring for context injection</strategy>
        <strategy>Conversation summarization for long threads</strategy>
      </context_management>
    </ai_integration>
    
    <data_storage>
      <local_database>
        <type>SQLite or LevelDB for offline functionality</type>
        <encryption>AES-256 for sensitive user data</encryption>
        <tables>
          <table>users (profile information)</table>
          <table>matches (match profiles)</table>
          <table>conversations (message history)</table>
          <table>suggestions (AI-generated content)</table>
          <table>analytics (performance metrics)</table>
          <table>library (saved content)</table>
        </tables>
      </local_database>
      
      <cloud_sync>
        <purpose>Optional backup and multi-device access</purpose>
        <security>End-to-end encryption</security>
        <services>AWS, Azure, or Firebase</services>
      </cloud_sync>
    </data_storage>
    
    <privacy_security>
      <principle>Local-first data storage</principle>
      <principle>No conversation data sent to third parties without consent</principle>
      <principle>Anonymized analytics only</principle>
      <principle>Optional cloud sync with encryption</principle>
      <principle>Secure API key management</principle>
      <principle>Auto-lock feature with PIN/biometric</principle>
    </privacy_security>
    
    <performance_optimization>
      <caching>Cache AI responses for similar contexts</caching>
      <lazy_loading>Load match data on demand</lazy_loading>
      <background_processing>Analyze conversations in background</background_processing>
      <offline_mode>Core features available without internet</offline_mode>
    </performance_optimization>
  </technical_architecture>

